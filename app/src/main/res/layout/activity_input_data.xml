<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_marginTop="?actionBarSize"
    tools:context=".input_data">

    <LinearLayout
        android:layout_marginLeft="25sp"
        android:layout_marginRight="25sp"
        android:id="@+id/layout_input_data"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="25sp"
            android:layout_marginBottom="60sp"
            android:text="Input Kwitansi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>


        <LinearLayout
            android:id="@+id/input_nama_pengirim"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:text="Telah Terima Dari"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>

            <EditText
                android:hint="Nama"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </EditText>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/input_banyak_uang"
            android:layout_marginTop="5sp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">


            <EditText
                android:hint="Nominal Terbilang"
                android:inputType="textMultiLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </EditText>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/input_tujuan_pembayaran"
            android:layout_marginTop="5sp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <EditText
                android:hint="Untuk Pembayaran"
                android:inputType="textMultiLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </EditText>
        </LinearLayout>




    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view_input"
        android:background="@drawable/outline_kotak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_alignParentBottom="true"
        app:menu="@menu/input_menu"
        />


</RelativeLayout>
